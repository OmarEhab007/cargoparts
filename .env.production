# Production Environment Configuration Template
# DO NOT commit this file with actual values

# ========================================
# APPLICATION SETTINGS
# ========================================
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://cargoparts.sa"
NEXT_PUBLIC_DEFAULT_LOCALE="ar"

# ========================================
# DATABASE
# ========================================
# Use production PostgreSQL (AWS RDS, Supabase, etc.)
DATABASE_URL="postgresql://username:password@prod-host:5432/cargoparts"

# Connection pooling for production
DATABASE_CONNECTION_LIMIT="10"
DATABASE_POOL_TIMEOUT="60000"

# ========================================
# AUTHENTICATION & SECURITY
# ========================================
# Generate strong secrets for production
JWT_SECRET="REPLACE_WITH_STRONG_64_CHAR_SECRET"
OTP_SECRET="REPLACE_WITH_STRONG_32_CHAR_SECRET"
SESSION_COOKIE_NAME="cargoparts-session"

# Production rate limiting (stricter)
RATE_LIMIT_OTP_PER_HOUR="5"
RATE_LIMIT_LOGIN_PER_HOUR="10"
RATE_LIMIT_SEARCH_PER_MINUTE="30"

# Security headers
FORCE_HTTPS="true"
SECURE_COOKIES="true"

# ========================================
# EMAIL & SMS SERVICES
# ========================================
# Production SMTP (use dedicated service)
SMTP_HOST="smtp.mailgun.org"
SMTP_PORT="587"
SMTP_USER="your-mailgun-user"
SMTP_PASS="your-mailgun-password"
SMTP_FROM="noreply@cargoparts.sa"

# SMS Provider (Unifonic for Saudi Arabia)
UNIFONIC_APP_SID="your-production-unifonic-app-sid"
SMS_SENDER_ID="CargoParts"

# ========================================
# FILE STORAGE
# ========================================
STORAGE_TYPE="s3"  # Use S3 for production

# AWS S3 Production
AWS_REGION="me-south-1"  # Bahrain region for Saudi Arabia
AWS_ACCESS_KEY_ID="your-production-access-key"
AWS_SECRET_ACCESS_KEY="your-production-secret-key"
S3_BUCKET="cargoparts-prod-images"
S3_CDN_URL="https://cdn.cargoparts.sa"

# ========================================
# PAYMENT GATEWAYS
# ========================================
# Tap Payment Production
TAP_API_KEY="your-production-tap-api-key"
TAP_SECRET_KEY="your-production-tap-secret-key"
TAP_WEBHOOK_SECRET="your-production-webhook-secret"
TAP_SANDBOX_MODE="false"

# HyperPay Production
HYPERPAY_ENTITY_ID="your-production-entity-id"
HYPERPAY_ACCESS_TOKEN="your-production-access-token"
HYPERPAY_WEBHOOK_SECRET="your-production-webhook-secret"
HYPERPAY_SANDBOX_MODE="false"

# ========================================
# EXTERNAL APIS
# ========================================
# VIN Decode Service Production
VIN_DECODE_API_KEY="your-production-vin-decode-api-key"
VIN_DECODE_API_URL="https://vpic.nhtsa.dot.gov/api/"

# Google Maps Production
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-production-google-maps-api-key"

# ========================================
# CACHE & SESSION STORAGE
# ========================================
# Production Redis (AWS ElastiCache, Redis Cloud, etc.)
REDIS_URL="redis://prod-redis-host:6379"
SESSION_STORE="redis"

# ========================================
# MONITORING & ANALYTICS
# ========================================
# Sentry for error tracking
SENTRY_DSN="your-sentry-dsn"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"
NEXT_PUBLIC_SENTRY_DSN="your-public-sentry-dsn"

# Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Vercel Analytics (if using Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS="true"

# ========================================
# PRODUCTION FLAGS
# ========================================
DEBUG_MODE="false"
LOG_LEVEL="warn"  # Production logging level
SKIP_EMAIL_VERIFICATION="false"
SKIP_PHONE_VERIFICATION="false"

# ========================================
# BUSINESS CONFIGURATION
# ========================================
# Saudi Arabia specific settings
DEFAULT_CURRENCY="SAR"
DEFAULT_COUNTRY="SA"
VAT_RATE="0.15"  # 15% VAT rate in Saudi Arabia
BUSINESS_LICENSE_REQUIRED="true"

# Platform fees
PLATFORM_FEE_PERCENTAGE="2.5"
PAYMENT_PROCESSING_FEE="2.9"

# ========================================
# COMPLIANCE & LEGAL
# ========================================
# ZATCA (Zakat, Tax and Customs Authority) Integration
ZATCA_ENABLED="true"
ZATCA_ENVIRONMENT="production"  # or "sandbox"
ZATCA_CERTIFICATE_PATH="/app/certs/zatca-prod.p12"

# SAMA (Saudi Central Bank) Compliance
SAMA_REPORTING_ENABLED="true"

# ========================================
# BACKUP & DISASTER RECOVERY
# ========================================
# Database backup settings
DATABASE_BACKUP_ENABLED="true"
DATABASE_BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
DATABASE_BACKUP_RETENTION_DAYS="30"

# File backup
S3_BACKUP_BUCKET="cargoparts-backup"
BACKUP_ENCRYPTION_KEY="your-backup-encryption-key"