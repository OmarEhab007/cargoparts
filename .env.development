# Development Environment Configuration
# Copy this file to .env.local and update the values

# ========================================
# APPLICATION SETTINGS
# ========================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_DEFAULT_LOCALE="ar"

# ========================================
# DATABASE
# ========================================
DATABASE_URL="postgresql://cargo:cargo@127.0.0.1:5433/cargo_parts?schema=public"

# ========================================
# AUTHENTICATION & SECURITY
# ========================================
JWT_SECRET="your-jwt-secret-key-here-minimum-32-chars"
OTP_SECRET="your-otp-secret-key-here"
SESSION_COOKIE_NAME="cargoparts-session"

# Rate Limiting (per hour/minute)
RATE_LIMIT_OTP_PER_HOUR="10"
RATE_LIMIT_LOGIN_PER_HOUR="20"
RATE_LIMIT_SEARCH_PER_MINUTE="60"

# ========================================
# EMAIL & SMS SERVICES
# ========================================
# Email Configuration (for OTP and notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@cargoparts.sa"

# SMS Provider (Unifonic for Saudi Arabia)
UNIFONIC_APP_SID="your-unifonic-app-sid"
SMS_SENDER_ID="CargoParts"

# ========================================
# FILE STORAGE
# ========================================
STORAGE_TYPE="supabase"  # Options: supabase, s3

# Supabase Storage (recommended)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_KEY="your-service-key"
STORAGE_BUCKET="cargoparts-images"

# AWS S3 Alternative
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
S3_BUCKET="cargoparts-images"

# ========================================
# PAYMENT GATEWAYS
# ========================================
# Tap Payment (Primary - Saudi Arabia)
TAP_API_KEY="your-tap-api-key"
TAP_SECRET_KEY="your-tap-secret-key"
TAP_WEBHOOK_SECRET="your-webhook-secret"
TAP_SANDBOX_MODE="true"

# HyperPay (Alternative)
HYPERPAY_ENTITY_ID="your-entity-id"
HYPERPAY_ACCESS_TOKEN="your-access-token"
HYPERPAY_WEBHOOK_SECRET="your-webhook-secret"
HYPERPAY_SANDBOX_MODE="true"

# ========================================
# EXTERNAL APIS
# ========================================
# VIN Decode Service
VIN_DECODE_API_KEY="your-vin-decode-api-key"
VIN_DECODE_API_URL="https://vpic.nhtsa.dot.gov/api/"

# Google Maps (for location services)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# ========================================
# CACHE & SESSION STORAGE
# ========================================
REDIS_URL="redis://localhost:6379"
SESSION_STORE="redis"  # Options: redis, memory

# ========================================
# MONITORING & ANALYTICS
# ========================================
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""
NEXT_PUBLIC_SENTRY_DSN=""

# Google Analytics
NEXT_PUBLIC_GA_ID=""

# ========================================
# DEVELOPMENT FLAGS
# ========================================
DEBUG_MODE="true"
LOG_LEVEL="debug"  # Options: error, warn, info, debug
SKIP_EMAIL_VERIFICATION="false"
SKIP_PHONE_VERIFICATION="false"